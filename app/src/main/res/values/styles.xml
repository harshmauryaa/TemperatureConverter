<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_border</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:background">@color/input_background</item>
        <item name="hintTextColor">@color/placeholder_text</item>
        <item name="android:textColorHint">@color/placeholder_text</item>
    </style>

    <style name="RoundedTextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
    </style>
</resources> 